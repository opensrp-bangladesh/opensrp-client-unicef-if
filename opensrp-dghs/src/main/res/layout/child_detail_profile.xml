<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/childdetailprofileview"
                android:src="@drawable/child_boy_infant"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="Name :"
                    android:layout_margin="5dp"
                    android:id="@+id/childdetail_childid_text"
                    android:textSize="14sp"
                    android:textColor="@color/text_black" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="BRID/NID :"
                    android:id="@+id/childdetail_childepino_text"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="Father&apos;s Name :"
                    android:id="@+id/childdetail_childname_text"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="Mother&apos;s Name :"
                    android:id="@+id/childdetail_fathername_text"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="270dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:layout_margin="5dp"
                    android:id="@+id/child_detail_name_field"
                    android:textSize="14sp"
                    android:textColor="@color/text_black" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:id="@+id/child_detail_brid_nid_field"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:id="@+id/child_detail_fathername_field"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:id="@+id/child_detail_mothername_field"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical">

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="EPI Card No :"
                    android:id="@+id/childdetail_epi_text"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="Birthdate (age) :"
                    android:id="@+id/childdetail_childdob_text"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="Contact No :"
                    android:id="@+id/child_detail_contact_no_detail"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:text="Address :"
                    android:id="@+id/child_detail_address_label"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:layout_gravity="center_vertical">

                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:id="@+id/child_detail_epicard_field"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:id="@+id/child_detail_birthdate_field"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:id="@+id/child_detail_contactno_field"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />
                <org.ei.opensrp.view.customControls.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    style="@style/CustomFontTextViewStyle.noPadding"
                    android:id="@+id/child_detail_address_field"
                    android:textSize="14sp"
                    android:layout_margin="5dp"
                    android:textColor="@color/text_black" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>