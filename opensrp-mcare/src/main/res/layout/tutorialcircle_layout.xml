<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <widget.ViewFlow
        android:id="@+id/viewflow" android:layout_width="fill_parent"
        android:layout_height="fill_parent" app:sidebuffer="3"
android:layout_gravity="center_horizontal|top"></widget.ViewFlow>

    <widget.CircleFlowIndicator
		android:padding="10dip"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/viewflowindic"
		android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="10dp"
        app:activeColor="@color/text_blue"
		app:inactiveType="fill"
        app:radius="10dp"
        />

</FrameLayout>
